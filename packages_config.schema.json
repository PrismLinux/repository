{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PrismLinux Package Configuration",
  "description": "Configuration file for managing PrismLinux package repository",
  "type": "object",
  "properties": {
    "gitlab_projects": {
      "type": "array",
      "description": "List of GitLab projects to sync packages from",
      "items": {
        "type": "object",
        "required": ["id", "name", "repository", "enabled"],
        "properties": {
          "id": {
            "type": "string",
            "description": "GitLab project ID or namespace/project path",
            "examples": ["12345", "mygroup/myproject"]
          },
          "name": {
            "type": "string",
            "description": "Human-readable project name",
            "minLength": 1
          },
          "repository": {
            "type": "string",
            "description": "Target repository: 'stable', 'testing', or 'stable;testing' for dual-repo",
            "pattern": "^(stable|testing|stable;testing|testing;stable)$",
            "enum": ["stable", "testing", "stable;testing", "testing;stable"]
          },
          "enabled": {
            "type": "boolean",
            "description": "Whether this project is enabled",
            "default": true
          }
        },
        "additionalProperties": false
      }
    },
    "remote_urls": {
      "type": "array",
      "description": "List of remote package URLs to download",
      "items": {
        "type": "object",
        "required": ["url", "repository", "enabled"],
        "properties": {
          "url": {
            "type": "string",
            "description": "Direct URL to .pkg.tar.zst package file",
            "pattern": "^https://.*\\.pkg\\.tar\\.zst(\\?.*)?$",
            "format": "uri"
          },
          "repository": {
            "type": "string",
            "description": "Target repository: 'stable' or 'testing'",
            "enum": ["stable", "testing"]
          },
          "enabled": {
            "type": "boolean",
            "description": "Whether this URL is enabled",
            "default": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["gitlab_projects", "remote_urls"],
  "additionalProperties": false
}
